{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Schema for normative rule definitions input files",
  "type": "object",

  "properties": {
    "$schema": {
      "type": "string"
    },
    "chapter_name": {
      "type": "string",
      "description": "Name of chapter (keep it short) in standards document associated with normative rules definitions"
    },
    "normative_rule_definitions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "$ref": "common-schema.json#/ruleName",
            "description": "Single normative rule name"
          },
          "names": {
            "$ref": "common-schema.json#/ruleNameArray",
            "description": "Multiple normative rule names"
          },
          "summary": {
            "type": "string",
            "$ref": "common-schema.json#/summaryDesc"
          },
          "description": {
            "type": "string",
            "$ref": "common-schema.json#/descriptionDesc"
          },
          "kind": {
            "allOf": [
              { "$ref": "common-schema.json#/stdsObjectKind" },
              { "$ref": "common-schema.json#/kindRuleDesc" }
            ]
          },
          "instance": {
            "type": "string",
            "$ref": "common-schema.json#/instanceRuleDesc"
          },
          "instances": {
            "allOf": [
              { "$ref": "common-schema.json#/stringArray" },
              { "$ref": "common-schema.json#/instancesRuleDesc" }
            ]
          },
          "tag": {
            "$ref": "common-schema.json#/tagName",
            "description": "Name of tag containing normative text"
          },
          "tags": {
            "$ref": "common-schema.json#/tagNameArray",
            "description": "List of tag names containing normative text"
          }
        },
        "allOf": [
          {
            "oneOf": [
              { "required": ["name"] },
              { "required": ["names"] }
            ]
          },
          {
            "not": {
              "required": ["tag", "tags"]
            }
          },
          {
            "not": {
              "required": ["instance", "instances"]
            }
          }
        ],
        "additionalProperties": false
      }
    }
  },
  "required": ["$schema", "chapter_name", "normative_rule_definitions"],
  "additionalProperties": false
}
